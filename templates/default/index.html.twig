{% extends 'layout.html.twig' %}

{% block body %}

    {{ include('_search_form.html.twig') }}

    <h1 class="mb-5 text-center">Ask Me Anything</h1>

    <h3 class="text-center">
        {% for category in categories %}
            <a class="badge badge-dark mr-1 ml-1 rounded" href="{{ path('app_category_view', { 'slug': category.slug }) }}">
                <i class="fas fa-fw fa-{{ category.icon }}"></i>
                {{ category.name }}
            </a>
        {% endfor %}
    </h3>

{% endblock body %}
