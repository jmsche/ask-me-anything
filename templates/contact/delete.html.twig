{% from 'macros.html.twig' import flash_messages %}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <form
            action="{{ path('app_contact_delete', { 'id': message.id }) }}"
            method="delete"
            novalidate="novalidate"
        >
            <div class="modal-header">
                <h5 class="modal-title">{{ 'content.delete.title'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ flash_messages() }}

                <div class="alert alert-danger">
                    {{ 'content.delete.body.alert'|trans }}
                </div>

                <p class="text-center">{{ 'content.delete.body.content'|trans }}</p>
                <p class="text-center font-weight-bold">
                    {{ 'contact.delete.description'|trans({
                        '%name%': message.author,
                        '%date%': message.createdOn|date('d/m/Y'),
                        '%time%': message.createdOn|date('H:i'),
                    }) }}
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-secondary mr-auto">
                    <i class="fas fa-times fa-fw"></i>
                    {{ 'content.delete.cancel'|trans }}
                </button>
                <button type="submit" name="saveMode" class="btn btn-danger">
                    <i class="fas fa-trash-alt fa-fw"></i>
                    {{ 'content.delete.confirm'|trans }}
                </button>
            </div>
        </form>
    </div>
</div>
