{{ form_start(form, { 'attr': { 'novalidate': 'novalidate' } }) }}
    <div class="row">
        {{ form_row(form.username, { 'row_attr': { 'class': 'col-4' } }) }}
        {{ form_row(form.plainPassword, { 'row_attr': { 'class': 'col-4' } }) }}
        {{ form_row(form.role, { 'row_attr': { 'class': 'col-4' } }) }}
    </div>

    <p>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-fw fa-check"></i>
            {{ 'content.save'|trans }}
        </button>

        <a href="{{ path('app_user_index') }}" class="btn btn-secondary">
            <i class="fas fa-fw fa-arrow-left"></i>
            {{ 'content.back_to_list'|trans }}
        </a>
    </p>
{{ form_end(form) }}
