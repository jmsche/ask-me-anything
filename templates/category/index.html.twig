{% extends 'layout.html.twig' %}

{% block body %}

    <a href="{{ path('app_category_create') }}" class="btn btn-primary float-right">
        <i class="fas fa-fw fa-plus"></i>
        {{ 'datalist.actions.create'|trans }}
    </a>

    <h1 class="mb-4">{{ 'category.navigation_label'|trans }}</h1>

    {% if categories|length > 0 %}
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>{{ 'category.field.icon_short'|trans }}</th>
                    <th>{{ 'category.field.name'|trans }}</th>
                    <th>{{ 'category.field.slug'|trans }}</th>
                    <th>{{ 'category.field.weight'|trans }}</th>
                    <th class="text-right">{{ 'datalist.actions.label'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <td><i class="fas fa-fw fa-{{ category.icon }}"></i></td>
                        <td>{{ category.name }}</td>
                        <td>{{ category.slug }}</td>
                        <td>{{ category.weight }}</td>
                        <td class="text-right">
                            <div class="btn-group btn-group-sm" role="group">
                                <a href="{{ path('app_category_update', { 'id': category.id }) }}" class="btn btn-secondary">
                                    <i class="fas fa-fw fa-pencil-alt"></i>
                                    {{ 'datalist.actions.update'|trans }}
                                </a>
                                <a href="{{ path('app_category_delete', { 'id': category.id }) }}" class="btn btn-danger" data-bootstrap="modal">
                                    <i class="fas fa-fw fa-trash"></i>
                                    {{ 'datalist.actions.delete'|trans }}
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-info">{{ 'datalist.no_items'|trans }}</div>
    {% endif %}

{% endblock body %}
