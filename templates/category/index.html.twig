{% extends 'layout.html.twig' %}

{% block body %}

    <a href="{{ path('app_category_create') }}" class="btn btn-primary float-right">
        <i class="fas fa-fw fa-plus"></i>
        Nouveau
    </a>

    <h1 class="mb-4">{{ 'category.navigation_label'|trans }}</h1>

    {% if categories|length > 0 %}
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Icône</th>
                    <th>Nom</th>
                    <th>Slug</th>
                    <th>Poids</th>
                    <th class="text-right">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <td><i class="fas fa-fw fa-{{ category.icon }}"></i></td>
                        <td>{{ category.name }}</td>
                        <td>{{ category.slug }}</td>
                        <td>{{ category.weight }}</td>
                        <td class="text-right">
                            <div class="btn-group btn-group-sm" role="group">
                                <a href="{{ path('app_category_update', { 'id': category.id }) }}" class="btn btn-secondary">
                                    <i class="fas fa-fw fa-pencil-alt"></i>
                                    Modifier
                                </a>
                                <a href="{{ path('app_category_delete', { 'id': category.id }) }}" class="btn btn-danger">
                                    <i class="fas fa-fw fa-trash"></i>
                                    Supprimer
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-info">Aucune catégorie n'est enregistrée.</div>
    {% endif %}

{% endblock body %}
